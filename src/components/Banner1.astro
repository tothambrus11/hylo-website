---
interface Props {
    title: string;
    subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="relative overflow-hidden bg-gradient-to-br from-[#667eea] to-[#764ba2] rounded-2xl shadow-lg shadow-[#667eea]/40">
    <div class="absolute top-0 right-0 w-full h-full bg-gradient-radial from-white/15 to-transparent opacity-50"></div>

    <div class="m-0 relative z-10 flex flex-col md:flex-row items-center justify-between gap-6 p-8 md:px-10">
        <div>
            <h2 class="text-3xl font-bold text-white mb-2">{title}</h2>
            <p class="text-white/95">{subtitle}</p>
        </div>

        <div class="flex flex-col md:flex-row gap-4 w-full md:w-auto">
            <slot />
        </div>
    </div>
</div>