---
interface Props {
    title: string;
    subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="relative overflow-hidden bg-gradient-to-br from-[#1a202c] to-[#2d3748] rounded-2xl shadow-lg transition-all duration-300">
    <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-[#667eea] via-[#764ba2] to-[#f093fb]"></div>

    <div class="not-content relative m-0 z-10 flex flex-col md:flex-row items-center justify-between gap-6 p-8 md:px-10">
        <div>
            <h2 class="text-3xl font-bold text-white mb-2">{title}</h2>
            <p class="text-white/80">{subtitle}</p>
        </div>

        <div class="flex flex-col md:flex-row gap-4 w-full md:w-auto">
            <slot />
        </div>
    </div>
</div>