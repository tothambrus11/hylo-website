---
interface Props {
    title: string;
    subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="relative bg-white rounded-2xl shadow-md transition-all duration-300 hover:shadow-lg group">
    <div class="absolute -inset-0.5 bg-gradient-to-br from-[#667eea] via-[#764ba2] to-[#f093fb] rounded-2xl opacity-60 group-hover:opacity-100 transition-opacity duration-300 -z-10"></div>

    <div class="relative bg-white rounded-2xl flex flex-col md:flex-row items-center justify-between gap-6 p-8 md:px-10">
        <div>
            <h2 class="text-3xl font-bold bg-gradient-to-br from-[#667eea] to-[#764ba2] bg-clip-text text-transparent mb-2">{title}</h2>
            <p class="text-[#4a5568]">{subtitle}</p>
        </div>

        <div class="flex flex-col md:flex-row gap-4 w-full md:w-auto">
            <slot />
        </div>
    </div>
</div>